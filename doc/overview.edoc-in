                            [{eap_method_prefer, pwd},
                            {eap_method_order, [pwd, ttls]}]}]},
               {acct,
                     [{{0,0,0,0}, 1813, []}]}]},
      {diameter,
               [{auth,
                      [{{0,0,0,0}, 3868,
                             [{eap_method_prefer, pwd},
                             {eap_method_order, [pwd, ttls]}]}]},
               {acct,
                     [{{0,0,0,0}, 3869, []}]}]},
      {min_reserve_octets, 5000000},
      {min_reserve_seconds, 60},
